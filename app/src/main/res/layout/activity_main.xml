<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="60dp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginLeft="5dp"
        android:text="1"
        android:onClick="clik1"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button"
        android:layout_below="@id/text"
        android:text="2"
        android:onClick="clik2"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_toRightOf="@id/button2"
        android:text="3"
        android:onClick="clik3"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginLeft="5dp"
        android:text="4"
        android:onClick="clik4"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_toRightOf="@id/button4"
        android:text="5"
        android:onClick="clik5"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_toRightOf="@id/button5"
        android:text="6"
        android:onClick="clik6"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_marginLeft="5dp"
        android:text="7"
        android:onClick="clik7"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:layout_toRightOf="@id/button7"
        android:text="8"
        android:onClick="clik8"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button8"
        android:text="9"
        android:onClick="clik9"/>



    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button8"
        android:layout_toRightOf="@id/button7"
        android:text="0"
        android:onClick="clik0"/>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_toRightOf="@id/button3"
        android:text="âŸ¸"
        android:onClick="delete"/>

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDelete"
        android:layout_toRightOf="@id/button3"
        android:text="+"
        android:onClick="clikPlus"/>

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPlus"
        android:layout_toRightOf="@id/button6"
        android:text="-"
        android:onClick="clik1Minus"/>
    <Button
        android:id="@+id/buttonMultiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonMinus"
        android:layout_toRightOf="@id/button9"
        android:text="*"
        android:onClick="clik1Multiplication"/>

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonMultiplication"
        android:layout_toRightOf="@id/buttonEqually"
        android:text="/"
        android:onClick="clik1Division"/>

    <Button
        android:id="@+id/buttonEqually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button9"
        android:layout_toRightOf="@id/button0"
        android:text="="
        android:onClick="clikEqually"/>

    <Button
        android:id="@+id/buttonC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button7"
        android:layout_marginLeft="5dp"
        android:text="C"
        android:onClick="clik1C"/>

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonC"
        android:layout_marginLeft="5dp"
        android:onClick="clik1Point"
        android:text="." />

    <Button
        android:id="@+id/openingBracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button0"
        android:layout_toRightOf="@id/buttonPoint"
        android:text="("
        android:onClick="clikOpeningBracket"/>

     <Button
        android:id="@+id/closingBracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEqually"
        android:layout_toRightOf="@id/openingBracket"
        android:text=")"
        android:onClick="clikClosingBracket"/>

</RelativeLayout>